@model Employee

@inject IDepartmentRepository _departmentRepo

@{
    var department = new SelectList(_departmentRepo.GetAll(), nameof(Department.Id), nameof(Department.Name));
}

<div class="form-group">
    <label asp-for="Name" class="col-form-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Age" class="col-form-label"></label>
    <input asp-for="Age" class="form-control" />
    <span asp-validation-for="Age" class="taxt-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Salary" class="col-form-label"></label>
    <input asp-for="Salary" class="form-control" />
    <span asp-validation-for="Salary" class="taxt-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Email" class="col-form-label"></label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="taxt-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Address" class="col-form-label"></label>
    <input asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="taxt-danger"></span>
</div>

<div class="form-group">
    <label asp-for="IsActive" class="col-form-label">Is Active</label>
    <div class="form-check">
        <input asp-for="IsActive" class="form-check-input" type="radio" id="activeYes" value="true" checked>
        <label class="form-check-label" for="activeYes">Yes</label>
    </div>
    <div class="form-check">
        <input asp-for="IsActive" class="form-check-input" type="radio" id="activeNo" value="false">
        <label class="form-check-label" for="activeNo">No</label>
    </div>
</div>


<div class="form-group">
    <label asp-for="Gender" class="col-form-label"></label>
    <input asp-for="Gender" class="form-control" />
    <span asp-validation-for="Gender" class="taxt-danger"></span>
</div>

<div class="form-group">
    <label asp-for="HiringDate" class="col-form-label"></label>
    <input asp-for="HiringDate" class="form-control" />
    <span asp-validation-for="HiringDate" class="taxt-danger"></span>
</div>

<div>

    <label class="col-form-label" asp-for="Departments"></label>
    <select class="form-control" asp-for="DepartmentId" asp-items="@department">
        <option value="@null" >-- Select Department --</option>
    </select>

</div>