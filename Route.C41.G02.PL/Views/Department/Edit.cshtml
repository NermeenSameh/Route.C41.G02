
@model Department

@{
    ViewData["Title"] = "Edit Department";
}

<h1>Edit Department</h1>

<form asp-action="Edit" method="post" >

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="DataOfCreation"></label>
        <input asp-for="DataOfCreation" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>

    </div>

    <input type="submit" value="Save" class="btn btn-primary" />
    <a  asp-action="Index" class="btn btn-info">Cancel</a>
</form>