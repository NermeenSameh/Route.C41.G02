@model Department

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Department</h1>


<br/>
<br/>

<form asp-action="Create">
    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="DataOfCreation"></label>
        <input asp-for="DataOfCreation" class="form-control" />
        <span asp-validation-for="DataOfCreation" class="text-danger"></span>

    </div>

    <input type="submit" value="Create" class="btn btn-primary" />
    <a asp-controller="Department" asp-action="Index" class="btn btn-info">Back To List</a>
</form>



@section ValidationScriptSection {

    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}